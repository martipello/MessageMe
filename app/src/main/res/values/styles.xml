<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Dark Buttons -->

    <style name="ThemeOverlay.MyBodyText" parent="AppTheme">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.ParagraphText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.ViewHolderTitleText" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ThemeOverlay.ViewHolderBodyText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="ThemeOverlay.ViewHolderContactTitleText" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ThemeOverlay.ViewHolderContactBodyText" parent="AppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

</resources>
